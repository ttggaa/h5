<script>
    var editor = UE.getEditor('article_content');
    $('#game_id').change(function(){
        if( $(this).val() == '' ) {
        	$('#game_name').val('');
    	} else {
    	    $('#game_name').val($('#game_id option:selected').text());
    	}
    });
    /**
     * 搜索游戏
     * @param obj
     */
    function searchGame(obj){
        var value=obj.value.trim();
        // console.log(value);
        var options=$('#game_id option');
        // console.log(options);
        // $("#game_id option:selected").removeAttr("selected");
        for(var i=0;i<options.length-1;i++){
            var option=options[i];
            // console.log(option);
            var now_value=option.text;
            if(now_value.indexOf(value)>=0){
                // console.log(now_value);
                $(option).attr('selected','selected');
                $('#game_name').val(option.text);
                break;
            }
        }
    }
</script>
