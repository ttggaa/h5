<script>
    layui.use(['layer', 'jquery'], function(){
        var layer = layui.layer
            ,$ = layui.jquery;
            var parities = parseInt('<?=$parities?>');
            /**支付金额选择*/
            $(".edit ul li").on("tap",function(){
                var money = parseInt($(this).find("span").text());
                $(".edit input").val(money);
                $('#get_nums').html(parities * money);
                $(this).addClass("m_active").siblings().removeClass("m_active");
            });
            /**支付方式选择*/
            $(".choses ul li").on("tap",function(){
                $(this).find(".checkbox ").addClass("checkbox_active");
                $(this).siblings().find(".checkbox").removeClass("checkbox_active");
            });
            /**验证输入框信息*/
            $("input[name=money]").on("focus",function(){
                $(".edit ul li").removeClass("m_active");
                $(this).attr("placeholder","");
            });
            $('.i_edit').on('tap', function(){
                $("input[name=money]").focus();
            });

            $("input[name=money]").on("blur",function(){
                var _t = $(this);
                var v = parseInt(_t.val());
                if( isNaN(v) || v < 0 ) {
                    _t.val('');
                    $('#get_nums').html('0');
                    return false;
                }
                if( v > 60000 ) {
                    _t.val(60000);
                    $('#get_nums').html(parities * 60000);
                    return false;
                }
            });

            $('#next_step').on('click', function(){
                $("#next_step").attr('disabled',true);
                var mn = parseInt($("input[name=Price]").val());
                if( isNaN(mn) || mn < 1 ) {
                    layer.msg('最小充值金额为1元');
                    return false;
                }
                if( mn > 60000 ) mn = 60000;
                var tp = $('.checkbox_active:visible');
                if( tp.length < 1 ) {
                    layer.msg('请选择支付方式');
                    return false;
                }
                tp = tp.attr('data-type');
                $('#jinzhuc').val(tp);
                //判断选择通道id
                var index = layer.open({
                    shade : 0.8,
                    type:3,
                });
                switch (tp) {
                    case 'alipay':
                        if(IsPC()){
                            $('#PayID').val('25');
                        }else{
                            $('#PayID').val('15');
                        }
                        $('.z_main').submit();
                        break;
                    case 'wxpay':
                        if(IsPC()){
                            $('#PayID').val('16');
                        }else{
                            $('#PayID').val('36');
                        }
                        $('.z_main').submit();
                        break;
                    case 'deposit':
                        $.ajax({
                            url:"/api/payByDeposit",
                            data:$('.z_main').serialize(),
                            type:"post",
                            async:false,
                            success:function(aaa){
                                //aaa为服务器所返回的值
                                var aaa=JSON.parse(aaa);
                                if(aaa.code===1){
                                    // alert(aaa.message);
                                    layer.msg(aaa.message);

                                }else{
                                    layer.msg('支付成功');
                                    layer.confirm('支付成功,点击返回', function(index){
                                        window.Android.backToApp();

                                    });
                                    // window.location.href=aaa.message;
                                }
                            },
                            error:function(){
                                //服务器连接失败
                                layer.msg('服务器连接失败');

                            },
                            beforeSend:function(){
                                //在success之前就进行了
                                //操作
                            },
                            complete:function(){
                                layer.close(index);
                                //在success之后就进行
                                //操作
                            }
                        });
                        break;
                    default:
                        return false;
                }
                $("#next_step").attr('disabled',false);
                // console.log($('.z_main').serialize());
                return false;
            });
    });
    function IsPC() {
        var userAgentInfo = navigator.userAgent;
        var Agents = ["Android", "iPhone",
            "SymbianOS", "Windows Phone",
            "iPad", "iPod"];
        var flag = true;
        for (var v = 0; v < Agents.length; v++) {
            if (userAgentInfo.indexOf(Agents[v]) > 0) {
                flag = false;
                break;
            }
        }
        return flag;
    }
</script>
